NEXT_PUBLIC_POLYGON_MAINNET_RPC="https://polygon-mainnet.infura.io/v3/[YOUR-PROJECT-ID]"
NEXT_PUBLIC_POLYGON_MUMBAI_RPC="https://polygon-mumbai.infura.io/v3/[YOUR-PROJECT-ID]"
NEXT_PUBLIC_FLARE_MAINNET_RPC="https://flare-api.flare.network/ext/bc/C/rpc"
NEXT_PUBLIC_FLARE_COSTON_RPC="https://coston-api.flare.network/ext/bc/C/rpc"

# Smart Contract Addresses
NEXT_PUBLIC_SCK_NFT_ADDRESS="[YOUR-CONTRACT-ADDRESS]"
NEXT_PUBLIC_DID_REGISTRY_CONTRACT_ADDRESS="[YOUR-CONTRACT-ADDRESS]"
NEXT_PUBLIC_DAO_CONTRACT_ADDRESS="[YOUR-CONTRACT-ADDRESS]"
NEXT_PUBLIC_PAYMENT_CONTRACT_ADDRESS="[YOUR-CONTRACT-ADDRESS]"

# Blockchain Configuration
ETHEREUM_PRIVATE_KEY="[YOUR-PRIVATE-KEY]"
ETHEREUM_RPC_URL="https://sepolia.infura.io/v3/[YOUR-PROJECT-ID]"

# Authentication & Identity
NEXT_PUBLIC_DID_RESOLVER_URL="https://dev.uniresolver.io"
NEXT_PUBLIC_DID_METHOD="ethr"

# Payment & Monetization
NEXT_PUBLIC_PAYMENT_STRATEGY="stripe"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
NEXT_PUBLIC_CRYPTO_PAYMENT_ENABLED="false"
NEXT_PUBLIC_ILP_ENABLED="false"

# Monitoring & Analytics
NEXT_PUBLIC_SENTRY_DSN="https://..."
NEXT_PUBLIC_SENTRY_ENVIRONMENT="production"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="[YOUR-ANALYTICS-ID]"
NEXT_PUBLIC_ANALYTICS_ID="[YOUR-ANALYTICS-ID]"
NEXT_PUBLIC_APM_URL="[YOUR-APM-URL]"
NEXT_PUBLIC_UNLEASH_URL="[YOUR-UNLEASH-URL]"
NEXT_PUBLIC_UNLEASH_CLIENT_KEY="[YOUR-UNLEASH-KEY]"

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,es,de,fr"
NEXT_PUBLIC_FALLBACK_LOCALE="en"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="https://[YOUR-DOMAIN]/api"

# Caching Configuration
NEXT_PUBLIC_REACT_QUERY_STALE_TIME="300000"
NEXT_PUBLIC_REACT_QUERY_CACHE_TIME="600000"
NEXT_PUBLIC_CDN_URL="[YOUR-CDN-URL]"

# Logging & Debugging
NEXT_PUBLIC_DEBUG_MODE="false"
NEXT_PUBLIC_LOG_LEVEL="info"

# Compliance & Legal
NEXT_PUBLIC_COOKIE_CONSENT_ENABLED="true"
NEXT_PUBLIC_COOKIE_CONSENT_BANNER_TEXT="We use cookies to improve your experience"
NEXT_PUBLIC_PRIVACY_POLICY_URL="/privacy"
NEXT_PUBLIC_TERMS_OF_SERVICE_URL="/terms"
NEXT_PUBLIC_GDPR_ENABLED="true"

# EU Compliance
NEXT_PUBLIC_EU_COMPLIANCE="true"

# Subdomain Configuration
NEXT_PUBLIC_SUBDOMAIN=""

# Validation & Sanity Checks
NEXT_PUBLIC_VALIDATE_ENVIRONMENT="true"

# AI & RAG Configuration (Phase 2)
LLM_PROVIDER="none" # 'none' | 'openai' | 'ollama' | 'vllm'
OPENAI_API_KEY=""
OLLAMA_BASE_URL="http://localhost:11434"
VLLM_BASE_URL="http://localhost:8000"
LLM_MODEL="llama3.1:8b-instruct"
EMBEDDING_PROVIDER="stub"
EMBEDDING_DIM="768"
AI_POLICY_DRAFT_ENABLED="true"
