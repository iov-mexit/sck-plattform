### Component Development
```typescript
// âœ… Good: Proper TypeScript, error handling, accessibility
interface DigitalTwinCardProps {
  twin: DigitalTwin;
  onEdit?: (id: string) => void;
}

export function DigitalTwinCard({ twin, onEdit }: DigitalTwinCardProps) {
  const [isLoading, setIsLoading] = useState(false);
  
  const handleEdit = useCallback(async () => {
    try {
      setIsLoading(true);
      await onEdit?.(twin.id);
    } catch (error) {
      console.error('Failed to edit digital twin:', error);
    } finally {
      setIsLoading(false);
    }
  }, [twin.id, onEdit]);

  return (
    <Card className="p-4">
      <CardHeader>
        <CardTitle>{twin.name}</CardTitle>
        <CardDescription>{twin.description}</CardDescription>
      </CardHeader>
      <CardContent>
        {/* Content */}
      </CardContent>
      <CardFooter>
        <Button 
          onClick={handleEdit}
          disabled={isLoading}
          aria-label={`Edit ${twin.name}`}
        >
          {isLoading ? <Spinner /> : 'Edit'}
        </Button>
      </CardFooter>
    </Card>
  );
}
```

