# NPM Configuration for SCK Platform
# Helps prevent rate limiting issues during builds

# Use official npm registry with fallback
registry=https://registry.npmjs.org/

# Aggressive retry configuration for network issues
fetch-retries=10
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=60000

# Timeout settings
fetch-timeout=600000

# Cache settings
cache-min=3600

# Progress bar (helpful for CI/CD)
progress=false

# Audit settings (can be disabled in CI if needed)
audit=false
fund=false

# Alternative registry fallback (if main registry fails)
# registry=https://registry.npmjs.com/
