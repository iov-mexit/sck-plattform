# NPM Configuration for SCK Platform
# Helps prevent rate limiting issues during builds

# Use official npm registry
registry=https://registry.npmjs.org/

# Retry configuration for network issues
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=120000

# Timeout settings
fetch-timeout=300000

# Cache settings
cache-min=3600

# Progress bar (helpful for CI/CD)
progress=false

# Audit settings (can be disabled in CI if needed)
audit=false
fund=false
