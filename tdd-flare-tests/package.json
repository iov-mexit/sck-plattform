{
  "name": "tdd-flare-tests",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "yarn test:chain && yarn test:api",
    "test:chain": "hardhat test --no-compile",
    "test:api": "jest --config jest.config.cjs --runInBand",
    "test:e2e": "playwright test",
    "compile": "hardhat compile",
    "deploy:coston": "ts-node -O '{\"module\":\"CommonJS\"}' scripts/deploy.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.10.0"
  },
  "devDependencies": {
    "hardhat": "^2.16.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "ethers": "^6.9.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "mocha": "^10.2.0",
    "chai": "^4.3.8",
    "jest": "^29.7.0",
    "supertest": "^6.4.2",
    "@playwright/test": "^1.36.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.3"
  }
}
